#!/usr/bin/env node

const inquirer = require('inquirer');
const chalk = require('chalk');
const init = require('../lib/init');
const utils = require('../lib/utils');
const snakeCase = require('lodash').snakeCase;

function getMessage() {
    return `Please input a package name.
    It will also be used as file name.
    For examples: ${chalk.cyan('library_example')}
    `;
}

const { argv } = process;
(async function () {
    if (argv.length <= 2) {
        const type = 'component';

        const { name } = await inquirer.prompt([
            {
                type: 'input',
                name: 'name',
                message: getMessage(),
                default: undefined,
                validate(name) {
                    return !!name;
                },
                filter(val) {
                    return snakeCase(val);
                },
            },
        ]);

        return init({
            type,
            material: type,
            name,
            path: utils.getFileName(name),
            access: 'public',
            team: '',
        }, {
            isUser: false,
        });
    }
})();

